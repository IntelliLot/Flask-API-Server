# Development Dockerfile - Hot reloading enabled
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender1 \
    libgomp1 \
    curl \
    vim \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements_full.txt .

# Install Python dependencies including dev tools
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements_full.txt && \
    pip install --no-cache-dir watchdog[watchmedo]

# Create directories
RUN mkdir -p /app/output /app/uploads

# Set environment variables for development
ENV PYTHONUNBUFFERED=1 \
    FLASK_APP=app.py \
    FLASK_ENV=development \
    FLASK_DEBUG=True

# Expose port
EXPOSE 5001

# Use Flask development server with auto-reload
CMD ["python", "app.py"]
