# Backend Video Server Configuration Example
# Copy this file to .env and modify the values as needed

# Remote Flask Server Configuration
REMOTE_SERVER_URL=http://localhost:5000/upload

# Video Capture Configuration  
CAMERA_INDEX=0
# VIDEO_SOURCE=path/to/video/file.mp4  # Uncomment to use video file instead of camera

# Snapshot Configuration
SNAPSHOT_INTERVAL=10                    # Capture every 10 seconds for backend operation
SNAPSHOT_WIDTH=640                      # Image width in pixels
SNAPSHOT_HEIGHT=480                     # Image height in pixels
SNAPSHOT_QUALITY=85                     # JPEG quality (0-100), 85 is good balance

# Network Configuration
REQUEST_TIMEOUT=30                      # HTTP request timeout in seconds
MAX_RETRIES=5                          # Number of retry attempts for failed requests
RETRY_DELAY=2                          # Delay between retries in seconds

# Logging Configuration
LOG_LEVEL=INFO                         # DEBUG, INFO, WARNING, ERROR
LOG_FILE=backend_server.log            # Log file name

# Local Storage Configuration (backup/fallback)
SAVE_LOCAL_SNAPSHOTS=true             # Save snapshots locally as backup
LOCAL_SNAPSHOTS_DIR=snapshots          # Directory for local snapshots